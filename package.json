{
  "name": "projeto-sep-fluxo-potencia",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "download:nodejs": "node scripts/download-nodejs.js",
    "prepare:electron": "node scripts/download-nodejs.js && node scripts/prepare-electron.js",
    "electron:build": "next build && npm run prepare:electron && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:build:win": "next build && npm run prepare:electron && xvfb-run -a bash -c 'WINEPREFIX=$HOME/.wine LC_ALL=C.UTF-8 LANG=C.UTF-8 CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_LINK= CSC_LINK= electron-builder --win'",
    "electron:build:linux": "next build && npm run prepare:electron && electron-builder --linux",
    "electron:build:mac": "next build && npm run prepare:electron && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "complex.js": "^2.4.2",
    "decimal.js": "^10.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.65.0",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.projeto-sep-fluxo-potencia",
    "productName": "Fluxo de PotÃªncia SEP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json",
      "!.next"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": ".next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "nodejs-portable",
        "to": "nodejs-portable",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "signingHashAlgorithms": null,
      "signDlls": false,
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}